<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingTop="15dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ar.com.overflowdt.minekkit.views.RoundedImageView
        android:id="@+id/navdrawer_user_picture"
        android:layout_width="60dp"
        android:layout_marginLeft="25dp"
        android:scaleType="centerCrop"
        android:layout_height="60dp" />

    <TextView
        android:id="@+id/navdrawer_option_title"
        android:layout_toRightOf="@id/navdrawer_user_picture"
        android:layout_toEndOf="@id/navdrawer_user_picture"
        android:textColor="@color/black"
        android:textSize="17sp"
        android:layout_marginLeft="15dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/navdrawer_published_products"
        android:layout_alignLeft="@+id/navdrawer_option_title"
        android:layout_alignStart="@+id/navdrawer_option_title"
        android:layout_toRightOf="@id/navdrawer_user_picture"
        android:layout_toEndOf="@id/navdrawer_user_picture"
        android:layout_below="@+id/navdrawer_option_title"
        android:textColor="@color/light_gray"
        android:gravity="left"
        android:textSize="14sp"
        android:layout_centerVertical="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <View
        android:layout_marginTop="10dp"
        android:layout_below="@id/navdrawer_user_picture"
        android:layout_width="match_parent"
        android:background="@color/lighter_gray"
        android:layout_height="0.5dp" />

</RelativeLayout>