<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@drawable/bg_640x960_3">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <TabHost
        android:id="@android:id/tabhost"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TabWidget
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@android:id/tabs"
                android:background="#74a841"
                android:tabStripEnabled="false" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@android:id/tabcontent"
                android:background="@drawable/bg_640x960_3"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin">


                <LinearLayout
                    android:id="@+id/tab4_recompensas"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ListView
                        android:id="@+id/list4_recompensas"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="#8092c53e" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/tab1_recompensas"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ListView
                        android:id="@+id/list1_recompensas"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="#8092c53e" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/tab2_recompensas"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ListView
                        android:id="@+id/list2_recompensas"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="#8092c53e" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/tab3_recompensas"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ListView
                        android:id="@+id/list3_recompensas"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="#8092c53e" />

                </LinearLayout>

            </FrameLayout>
        </LinearLayout>
    </TabHost>
</LinearLayout>