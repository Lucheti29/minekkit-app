<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <TabHost
        android:id="@android:id/tabhost"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TabWidget
                android:id="@android:id/tabs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/mk_verde_1"
                android:tabStripEnabled="false" />

            <FrameLayout
                android:id="@android:id/tabcontent"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_640x960_3"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin">


                <LinearLayout
                    android:id="@+id/tab3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ScrollView
                        android:id="@+id/scrollView3"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/textView5"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="@string/denuncia_formulario"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:textColor="@color/white"
                                android:textSize="25dp"
                                android:textStyle="bold" />

                            <Button
                                android:id="@+id/button"
                                style="@style/button_mk_light_blue"
                                android:layout_gravity="center_horizontal"
                                android:onClick="verReglas"
                                android:text="Ver normas" />

                            <TextView
                                android:id="@+id/textView3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="15dp"
                                android:text="Escribí el número de las normas no cumplidas"
                                android:textColor="@color/white"
                                android:textSize="20sp" />

                            <EditText
                                android:id="@+id/et_normas"
                                style="@style/Campo.Verde.Mkapp_style"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:ems="10"
                                android:maxLength="50"
                                android:maxLines="1"
                                android:minLines="1"
                                android:padding="10dp"
                                android:textColor="@color/white">

                            <requestFocus />
                            </EditText>

                        </LinearLayout>
                    </ScrollView>

                    <TableLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"></TableLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/tab2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ScrollView
                        android:id="@+id/scrollView2"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/textView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="@string/denuncia_formulario"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:textColor="@color/white"
                                android:textSize="25dp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/textView2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="15dp"
                                android:text="Tipo de denuncia"
                                android:textColor="@color/white"
                                android:textIsSelectable="false"
                                android:textSize="20sp" />

                            <RadioGroup
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_marginTop="15dp">

                                <RadioButton
                                    android:id="@+id/rb_denuncia1"
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="3dp"
                                    android:background="#92c53e"
                                    android:padding="10dp"
                                    android:text="Griefing"
                                    android:textColor="@color/white" />

                                <RadioButton
                                    android:id="@+id/rb_denuncia2"
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="3dp"
                                    android:background="#92c53e"
                                    android:padding="10dp"
                                    android:text="Robo"
                                    android:textColor="@color/white" />

                                <RadioButton
                                    android:id="@+id/rb_denuncia3"
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="3dp"
                                    android:background="#92c53e"
                                    android:padding="10dp"
                                    android:text="LAG"
                                    android:textColor="@color/white" />

                                <RadioButton
                                    android:id="@+id/rb_denuncia4"
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="3dp"
                                    android:background="#92c53e"
                                    android:padding="10dp"
                                    android:text="Estafa en el comercio"
                                    android:textColor="@color/white" />

                                <RadioButton
                                    android:id="@+id/rb_denuncia5"
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="3dp"
                                    android:background="#92c53e"
                                    android:padding="10dp"
                                    android:text="Destrucción en plot"
                                    android:textColor="@color/white" />

                                <RadioButton
                                    android:id="@+id/rb_denuncia6"
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="3dp"
                                    android:background="#92c53e"
                                    android:padding="10dp"
                                    android:text="Ciudad"
                                    android:textColor="@color/white" />

                                <RadioButton
                                    android:id="@+id/rb_denuncia7"
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="3dp"
                                    android:background="#92c53e"
                                    android:padding="10dp"
                                    android:text="Otro tipo"
                                    android:textColor="@color/white" />

                            </RadioGroup>
                        </LinearLayout>
                    </ScrollView>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/tab4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:weightSum="1">

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/denuncia_pruebas"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/white"
                        android:textSize="25dp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/btn_add_img"
                            style="@style/button_mk_light_blue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/agregar_imagen" />

                        <Button
                            android:id="@+id/btn_take_photo"
                            style="@style/button_mk_light_blue"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text="Tomar Foto" />
                    </LinearLayout>

                    <ListView
                        android:id="@+id/denuncia_list"
                        android:layout_width="match_parent"
                        android:layout_height="fill_parent"
                        android:layout_gravity="center_horizontal" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/tab1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ScrollView
                        android:id="@+id/scrollView"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_formulario"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="@string/denuncia_formulario"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:textColor="@color/white"
                                android:textSize="25dp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tv_titulo"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="15dp"
                                android:text="@string/denuncia_titulo"
                                android:textColor="@color/white" />

                            <EditText
                                android:id="@+id/et_titulo"
                                style="@style/Campo.Verde.Mkapp_style"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="3dp"
                                android:ems="10"
                                android:maxLength="50"
                                android:maxLines="1"
                                android:minLines="1"
                                android:padding="10dp"
                                android:textColor="@color/white">

                            <requestFocus />
                            </EditText>

                            <TextView
                                android:id="@+id/tv_fecha"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="15dp"
                                android:text="@string/denuncia_fecha"
                                android:textColor="@color/white" />

                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="3dp"
                                android:orientation="horizontal">

                                <EditText
                                    android:id="@+id/et_fecha"
                                    style="@style/Campo.Verde.Mkapp_style"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:ems="10"
                                    android:inputType="date"
                                    android:maxLines="1"
                                    android:minLines="1"
                                    android:padding="10dp"
                                    android:textColor="@color/white" />
                            </LinearLayout>

                            <TextView
                                android:id="@+id/tv_hora"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="15dp"
                                android:text="@string/denuncia_horario"
                                android:textColor="@color/white" />

                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="3dp"
                                android:orientation="horizontal">

                                <EditText
                                    android:id="@+id/et_hora"
                                    style="@style/Campo.Verde.Mkapp_style"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:ems="10"
                                    android:inputType="time"
                                    android:maxLines="1"
                                    android:minLines="1"
                                    android:padding="10dp"
                                    android:textColor="@color/white" />

                                <TextView
                                    android:id="@+id/tv_horario_gmt"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="5dp"
                                    android:text="@string/denuncia_horario_gmt"
                                    android:textColor="@color/white" />
                            </LinearLayout>

                            <TextView
                                android:id="@+id/tv_mundo"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="15dp"
                                android:text="@string/denuncia_mundo"
                                android:textColor="@color/white" />

                            <EditText
                                android:id="@+id/et_mundo"
                                style="@style/Campo.Verde.Mkapp_style"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="3dp"
                                android:ems="10"
                                android:maxLines="1"
                                android:minLines="1"
                                android:padding="10dp"
                                android:textColor="@color/white" />

                            <TextView
                                android:id="@+id/tv_ciudad"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="15dp"
                                android:text="@string/denuncia_ciudad"
                                android:textColor="@color/white" />

                            <EditText
                                android:id="@+id/et_ciudad"
                                style="@style/Campo.Verde.Mkapp_style"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="3dp"
                                android:ems="10"
                                android:maxLength="15"
                                android:maxLines="1"
                                android:minLines="1"
                                android:padding="10dp"
                                android:textColor="@color/white" />
                        </LinearLayout>
                    </ScrollView>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/tab5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:weightSum="1">

                    <ScrollView
                        android:id="@+id/scrollView5"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent">

                        <LinearLayout
                            android:id="@+id/linear"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/textView7"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="@string/denuncia_formulario"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:textColor="@color/white"
                                android:textSize="25dp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tv_usuarios"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="15dp"
                                android:text="@string/denuncia_usuarios"
                                android:textColor="@color/white" />

                            <EditText
                                android:id="@+id/et_usuarios"
                                style="@style/Campo.Verde.Mkapp_style"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="3dp"
                                android:ems="10"
                                android:maxLength="50"
                                android:maxLines="1"
                                android:minLines="1"
                                android:padding="10dp"
                                android:textColor="@color/white">

                            <requestFocus />
                            </EditText>

                            <TextView
                                android:id="@+id/tv_explicacion"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="15dp"
                                android:text="@string/denuncia_explicacion"
                                android:textColor="@color/white" />

                            <EditText
                                android:id="@+id/et_explicacion"
                                style="@style/Campo.Verde.Mkapp_style"
                                android:layout_width="match_parent"
                                android:layout_height="100dp"
                                android:layout_marginTop="3dp"
                                android:layout_weight="1.47"
                                android:ems="10"
                                android:inputType="textMultiLine"
                                android:maxLines="0"
                                android:minLines="1"
                                android:padding="10dp"
                                android:textColor="@color/white">

                            <requestFocus />
                            </EditText>

                            <TextView
                                android:id="@+id/tv_solucion"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="15dp"
                                android:text="@string/denuncia_solucion"
                                android:textColor="@color/white" />

                            <EditText
                                android:id="@+id/et_solucion"
                                style="@style/Campo.Verde.Mkapp_style"
                                android:layout_width="match_parent"
                                android:layout_height="100dp"
                                android:layout_marginTop="3dp"
                                android:layout_weight="2.06"
                                android:ems="10"
                                android:inputType="textMultiLine"
                                android:maxLines="0"
                                android:minLines="1"
                                android:padding="10dp"
                                android:textColor="@color/white">

                            <requestFocus />
                            </EditText>

                            <Button
                                android:id="@+id/btn_aceptar_login"
                                style="@style/button_mk_light_blue"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="16dp"
                                android:onClick="crearDenuncia"
                                android:text="@string/boton_enviar" />
                        </LinearLayout>
                    </ScrollView>

                </LinearLayout>

            </FrameLayout>

        </LinearLayout>
    </TabHost>
</LinearLayout>