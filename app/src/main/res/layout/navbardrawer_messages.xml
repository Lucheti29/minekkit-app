<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/NavDrawerGenericContainer">

    <ImageView
        android:id="@+id/navdrawer_option_icon"
        style="@style/NavDrawerOptionIcon" />

    <TextView
        android:id="@+id/navdrawer_option_title"
        style="@style/NavDrawerOptionTitle"
        android:layout_toRightOf="@id/navdrawer_option_icon"
        android:layout_toEndOf="@id/navdrawer_option_icon" />

    <TextView
        android:id="@+id/navdrawer_number_of_messages"
        android:layout_toRightOf="@id/navdrawer_option_title"
        android:layout_toEndOf="@id/navdrawer_option_title"
        android:gravity="end"
        android:layout_marginRight="@dimen/drawer_right_margin"
        android:layout_alignParentRight="true"
        android:textSize="14sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true" />

</RelativeLayout>