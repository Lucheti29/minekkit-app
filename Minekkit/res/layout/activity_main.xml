<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_640x960_3"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/img_logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/logo_mk"
        android:layout_gravity="center_horizontal" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="15dp">

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/btn_mapa"
                    android:src="@drawable/btn_mapa"
                    android:background="#00000000"
                    android:onClick="mapa"
                    android:layout_weight="1" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/btn_recom"
                    android:src="@drawable/btn_recompensas"
                    android:background="#00000000"
                    android:layout_weight="1" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/btn_inventario"
                    android:src="@drawable/btn_inventario"
                    android:background="#00000000"
                    android:layout_weight="1"
                    android:onClick="verInventorio" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="15dp">

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/btn_denuncias"
                    android:src="@drawable/btn_denuncia"
                    android:background="#00000000"
                    android:layout_weight="1"
                    android:onClick="hacerDenuncia" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/btn_wiki"
                    android:src="@drawable/btn_wiki"
                    android:background="#00000000"
                    android:layout_weight="1"
                    android:onClick="verWiki" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/btn_pms"
                    android:src="@drawable/btn_pm"
                    android:background="#00000000"
                    android:layout_weight="1"
                    android:onClick="verPms" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="15dp">

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/btn_config"
                    android:src="@drawable/btn_config"
                    android:background="#00000000"
                    android:layout_weight="1"
                    android:onClick="notiTest" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/btn_obtenerReco"
                    android:src="@drawable/btn_obtenerreco"
                    android:background="#00000000"
                    android:layout_weight="1"
                    android:onClick="verClaimCoin" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/btn_donar"
                    android:src="@drawable/btn_donar"
                    android:background="#00000000"
                    android:layout_weight="1" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="15dp">

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/btn_facebook"
                    android:src="@drawable/btn_facebook"
                    android:background="#00000000"
                    android:layout_weight="1"
                    android:onClick="verFacebook" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/btn_youTube"
                    android:src="@drawable/btn_youtube"
                    android:background="#00000000"
                    android:layout_weight="1"
                    android:onClick="verYoutube" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/btn_twitter"
                    android:src="@drawable/btn_twitter"
                    android:background="#00000000"
                    android:layout_weight="1"
                    android:onClick="verTwitter" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <TextView
                    android:id="@+id/tv_versionAlpha"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/img_logo"
                    android:layout_centerHorizontal="true"
                    android:text="@string/version"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_marginTop="15dp" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
